     android:layout_centerHorizontal="true"
     android:layout_marginTop="117dp"
     android:alpha="0.5"
     android:src="@drawable/index"
     app:civ_border_color="#060606"
     app:civ_border_width="2dp"
     app:layout_constraintEnd_toEndOf="parent"
